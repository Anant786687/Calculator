<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="#00f"
        android:textColor="#fff"
        android:id="@+id/tv1"
        android:textSize="30sp"
        android:textDirection="rtl"
        />
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow>
        <Button
            android:text="C"
            android:textStyle="bold"
            android:background="#FFB6C1"
            android:textSize="25sp"
            android:layout_column="1"
            android:id="@+id/bC"/>
        <Button
            android:text="="
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_column="2"
            android:id="@+id/bEq"/>

    </TableRow>
    <TableRow>
        <Button
            android:text="7"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_column="1"
            android:id="@+id/b7"/>
        <Button
            android:text="8"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_column="2"
            android:id="@+id/b8"/>
        <Button
            android:text="9"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_column="3"
            android:id="@+id/b9"/>
        <Button
            android:text="/"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_column="4"
            android:layout_width="140sp"
            android:id="@+id/bD"/>

    </TableRow>

    <TableRow>
        <Button
            android:text="4"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_column="1"
            android:id="@+id/b4"/>
        <Button
            android:text="5"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_column="2"
            android:id="@+id/b5" />
        <Button
            android:text="6"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_column="3"
            android:id="@+id/b6"/>
        <Button
            android:text="*"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_column="4"
            android:layout_width="140sp"
            android:id="@+id/bM"/>

    </TableRow>


    <TableRow>
        <Button
            android:text="3"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_column="1"
            android:id="@+id/b3"/>
        <Button
            android:text="2"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_column="2"
            android:id="@+id/b2"/>
        <Button
            android:text="1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_column="3"
            android:id="@+id/b1"/>
        <Button
            android:text="-"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_column="4"
            android:layout_width="140sp"
            android:id="@+id/bS"/>

    </TableRow>

    <TableRow>
        <Button
            android:text="0"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_column="1"
            android:id="@+id/b0"/>

        <Button
            android:text="."
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_column="2"
            android:layout_width="10sp"
            android:id="@+id/bDot"/>

        <Button
            android:text="del"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_column="3"
            android:layout_width="10sp"
            android:id="@+id/bDel"/>

        <Button
            android:text="+"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_column="4"
            android:layout_width="140sp"
            android:id="@+id/bP"/>
    </TableRow>
</TableLayout>


</LinearLayout>